<% if object.errors.any? %>
  <div id="error-summary" class="error-summary group" role="alert"
    tabindex="-1" aria-labelledby="error-heading">
    <h1 id="error-summary-heading" class="heading-medium error-summary-heading">
      <%= t('.heading') %>
    </h1>

    <% general_errors = object.errors[:general] %>

    <% if general_errors.any? %>
      <ul class="error-messages">
        <% general_errors.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <p>
      <%= t('.see_below') %>
    </p>
  </div>
<% end %>
