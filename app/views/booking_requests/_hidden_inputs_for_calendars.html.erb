<div class="hidden--js-enabled">
  <% 3.times do |i| %>
    <% if f.object.next_slot_to_fill == i.to_s %>
      <%=
        single_field(
          f, :"option_#{i}", :select,
          slot_options_reflecting_existing_selections(f.object),
          { include_blank: true },
          class: 'SlotPicker-input'
        )
      %>
    <% else %>
      <%= hidden_field_tag("slots_step[option_#{i}]", @steps.fetch(:slots_step).send("option_#{i}")) %>
    <% end %>
  <% end %>

  <%= hidden_field_tag('slots_step[currently_filling]', @steps.fetch(:slots_step).next_slot_to_fill) %>
  <%= hidden_field_tag('slots_step[review_slot]', @steps.fetch(:slots_step).review_slot) %>
  <%= hidden_field_tag('slots_step[skip_remaining_slots]', @steps.fetch(:slots_step).skip_remaining_slots %>
</div>
