<% content_for :header, t('.title') %>
<%= render('shared/timeout_prompt') %>
<%= form_for(@steps.fetch(:prisoner_step),
  url: booking_requests_path,
  html: { class: 'js-SubmitOnce', autocomplete: 'off' }) do |f| %>

  <% if reviewing? %>
    <%= render('hidden_visitors_step') %>
    <%= render('hidden_slots_step') %>
  <% end %>
  <%= render('shared/validation', object: f.object) %>

  <div class="grid-row">
    <div class="column-two-thirds">
      <div class="form-group">
        <h3 class="bold-medium">
          <%= t('.prisoner_details') %>
        </h3>
      </div>
      <fieldset>
        <legend class="visuallyhidden">
          <%= t('.prisoner_details') %>
        </legend>
        <%= f.text_field :first_name %>
        <%= f.text_field :last_name %>

        <% date =  f.object.date_of_birth || Date.today %>
        <% accessible_date = AccessibleDate.new(day: date.day, month: date.month, year: date.year) %>
        <% accessible_date = AccessibleDate.new(day: date.day, month: date.month, year: date.year) %>
        <%= f.fields_for :date_of_birth,  do |d| %>
          <%= d.text_field :day %>
          <%= d.text_field :month %>
          <%= d.text_field :year %>
        <% end %>


        <%= f.text_field :number %>
        <%= f.collection_select :prison_id, Prison.all, :id, :name, {prompt: true}, {class: "js-autocomplete"} %>

        <div class="form-group">
          <%= t('.information_html') %>
        </div>
        <div class="grid-row form-group">
          <div class="column-one-half">
            <%= f.submit(t('.next_step'), class: 'button button-primary') %>
          </div>
          <div class="column-one-half">
            <%= render('cancel') %>
          </div>
        </div>
      </fieldset>
    </div>
  </div>

<% end %>

<div class="grid-row">
  <div class="column-two-thirds">
    <div class="bold-small"><%= t('.note_header') %></div>
    <p class="note">
      <%= t('.note') %>
    </p>
    <%= render('contact_prison') %>
  </div>
</div>
