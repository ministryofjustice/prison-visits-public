<% content_for :pagetitle, t('.title') %>

<div class="govuk-box-highlight">
  <h2 class="bold-large push-bottom">
    <%= t('.title') %>
  </h2>
  <%= t('visits.shared.highlight_visit_id_html', id: @visit.human_id) %>
  <p><%= t('visits.shared.highlight_intro') %></p>
</div>

<div class="grid-row">
  <div class="column-two-thirds">
    <h2 class="heading-small"><%= t('.your_visit') %></h2>
    <p><%= format_slot_for_public(@visit.slot_granted) %></p>

    <h2 class="heading-small"><%= t('.location') %></h2>
    <p>HMP <%= @visit.prison_name %>
      <br>
      <%= add_line_breaks(@visit.prison_address) %></p>

    <h2 class="heading-small"><%= t('.cancelled_on') %></h2>
    <p><%= @visit.cancelled_at.to_s(:short) %></p>

    <h2 class="heading-small"><%= t('.cancellation_reason', count: @visit.cancellation_reasons.size) %></h2>
    <ul class='list list-bullet'>
      <% @visit.cancellation_reasons.each do |reason| %>
        <li><%= t(".#{reason}") %></li>
      <% end %>
    </ul>
    <hr>
    <p><%= link_to(t('visits.shared.rate_service_html', url: link_directory.rate_service)) %></p>
    <p><%= t('visits.shared.request_new_visit_html', url: booking_requests_path) %></p>
  </div>
